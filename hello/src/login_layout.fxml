<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="LoginController"
           alignment="CENTER"
           style="-fx-background-color: linear-gradient(to top, #5f25a0, #e3f2fd);">

    <VBox spacing="15" alignment="CENTER"
          maxWidth="400" maxHeight="320"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.3, 0, 2);">

        <Label text="Sign in with email"
               style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333;"/>

       

        <TextField fx:id="emailField" promptText="Email"
                   style="-fx-pref-width: 280;"/>

        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-pref-width: 280;"/>

        <Hyperlink text="Forgot password?"
                   style="-fx-text-fill: #64b5f6; -fx-font-size: 11;"/>

        <Button text="Sign in"
                onAction="#handleLogin"
                style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 280;"/>

    </VBox>
</StackPane>
