<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="LoginController"
           alignment="CENTER"
           style="-fx-background-color: linear-gradient(to right, #eceff1, #ffffff);">

    <HBox spacing="0" alignment="CENTER"
          maxWidth="600" maxHeight="350"
          style="-fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.3, 0, 2);">

        <!-- Left Panel: Login Box -->
        <VBox alignment="CENTER" spacing="15" prefWidth="280"
              style="-fx-background-color: white; -fx-padding: 30 20;">
            <Label text="Login"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 220;"/>
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 220;"/>
            <Button text="Login"
                    onAction="#handleLogin"
                    style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 220;"/>
            <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 10;"/>
        </VBox>

        <!-- Right Panel: Title -->
        <StackPane prefWidth="320" style="-fx-background-color: #64b5f6;">
            <Label text="Application Comparison Tool"
                   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </StackPane>
    </HBox>
</StackPane>
