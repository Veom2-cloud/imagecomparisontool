<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.paint.Color?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HelloController">
    <top>
        <VBox spacing="5" style="-fx-background-color: #f0f0f0; -fx-padding: 5;">
            <!-- Top Bar: DXC Logo and Title / Current File name -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #e0e0e0; -fx-padding: 5; -fx-border-radius: 5; -fx-background-radius: 5;">
                <!-- DXC Logo Placeholder - using a colored rectangle as per screenshot -->
                <Rectangle width="80" height="30" arcWidth="5" arcHeight="5" fill="#5cb85c" />
                <Label text="DXC Logo" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 5 0 5 10;"/>
                <Region HBox.hgrow="ALWAYS"/> <!-- Spacer -->
                <Label fx:id="titleLabel" text="Title / Current File name" HBox.hgrow="ALWAYS" style="-fx-font-weight: bold; -fx-padding: 5; -fx-text-fill: #333; -fx-alignment: center;"/>
                <Region HBox.hgrow="ALWAYS"/> <!-- Spacer -->
                <Label text="" style="-fx-pref-width: 80;"/> <!-- Placeholder for right side of title bar, if any content later -->
            </HBox>

            <!-- Menu Bar / Button Bar -->
            <VBox style="-fx-background-color: #d0d0d0; -fx-border-radius: 5; -fx-background-radius: 5;">
                <!-- First Level Menu Bar -->
                <MenuBar>
                    <menus>
                        <Menu text="Session">
                            <items>
                                <MenuItem text="Folder" onAction="#handleFolderBrowse"/>
                                <MenuItem text="File" onAction="#handleFileBrowse"/>
                                <MenuItem text="Save Session"/>
                                <MenuItem text="Recent"/>
                            </items>
                        </Menu>
                        <Menu text="View">
                            <items>
                                <MenuItem text="Difference Only"/>
                                <MenuItem text="All"/>
                                <MenuItem text="Highlight"/>
                                <MenuItem text="Side-By-Side/Up-Down"/>
                                <MenuItem text="Element Comparison"/>
                            </items>
                        </Menu>
                        <Menu text="Report">
                            <items>
                                <MenuItem text="Generate Report"/>
                                <MenuItem text="Export Difference"/>
                                <MenuItem text="Export XML"/>
                            </items>
                        </Menu>
                        <Menu text="Settings">
                            <items>
                                <MenuItem text="Save Layout"/>
                            </items>
                        </Menu>
                        <Menu text="Help">
                            <items>
                                <MenuItem text="How to Use"/>
                                <MenuItem text="FAQ"/>
                                <MenuItem text="Report Issue"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

            </VBox>
        </VBox>
    </top>

    <left>
        <!-- Side Bar -->
        <VBox fx:id="sideBar" prefWidth="250" spacing="10" style="-fx-background-color: #f8f8f8; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-width: 0 1 0 0;">
            <Label text="Side Bar" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
            <!-- Added onAction for the show/hide button -->
            <Button text="Show/Hide Button" maxWidth="Infinity" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5;" onAction="#toggleSideBarVisibility"/>
            <Separator/>
            <Label text="Folder Browse"/>
            <Label text="File Browse"/>
            <Label text="Last Session"/>
            <Label text="Current Folder/Files list"/>
            <Separator/>
            <Label text="Left List" style="-fx-font-weight: bold;"/>
            <ListView fx:id="leftFileList" VBox.vgrow="ALWAYS"/>
            <Label text="Right List" style="-fx-font-weight: bold;"/>
            <ListView fx:id="rightFileList" VBox.vgrow="ALWAYS"/>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label text="Q" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                <!-- Ensure fx:id="searchTextField" is present here and matches the controller variable -->
                <TextField fx:id="searchTextField" promptText="Search" HBox.hgrow="ALWAYS" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ccc;"/>
                <Button text="Go" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-background-color: #eee; -fx-border-color: #ccc; -fx-border-width: 1;"/>
            </HBox>
        </VBox>
    </left>

    <center>
        <!-- Central Working Area - Placeholder for dynamic content -->
        <StackPane fx:id="centralWorkingArea" style="-fx-background-color: #ffffff; -fx-padding: 10;">
            <Label text="Central working area" style="-fx-font-size: 24; -fx-text-fill: #aaa;"/>
            <!-- Content for Folder Compare or File Compare will be loaded here -->
        </StackPane>
    </center>

    <bottom>
        <!-- Footer -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #e0e0e0; -fx-padding: 5; -fx-border-radius: 5; -fx-background-radius: 5;">
            <Label text="Footer showing line number / column number or any other additional information" HBox.hgrow="ALWAYS" style="-fx-font-size: 12; -fx-text-fill: #555;"/>
        </HBox>
    </bottom>
</BorderPane>
